# File managed by Puppet
<% for @ip in @nameservers -%>
nameserver <%= @ip %>
<% end -%>
<% if defined?@domains && @domains.any? -%>
search <% for @domain in @domains -%>
 <%= @domain -%>
<% end -%><% end %>
<% if defined?@options && @options.any? -%>
options <% for @option in @options -%>
 <%= @option -%>
<% end -%><%end %>
